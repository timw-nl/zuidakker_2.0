{
  "name": "zuidakker-tests",
  "version": "2.0.0",
  "description": "Automated tests for Zuidakker WordPress site",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:visual": "playwright test --grep @visual",
    "test:functional": "playwright test --grep @functional",
    "test:pillar": "playwright test --grep @pillar",
    "test:language": "playwright test --grep @language",
    "report": "playwright show-report",
    "update-snapshots": "playwright test --update-snapshots"
  },
  "keywords": [
    "wordpress",
    "testing",
    "playwright",
    "e2e"
  ],
  "author": "Zuidakker",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "playwright": "^1.40.0"
  }
}
