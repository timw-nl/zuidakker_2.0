# Zuidakker WordPress Environment Configuration
# Copy this file to .env and update with your values

# Database Configuration
MYSQL_DATABASE=zuidakker
MYSQL_USER=zuidakker
MYSQL_PASSWORD=zuidakker
MYSQL_ROOT_PASSWORD=Quirinus

# WordPress Configuration
WORDPRESS_DB_HOST=db:3306
WORDPRESS_DB_NAME=zuidakker
WORDPRESS_DB_USER=zuidakker
WORDPRESS_DB_PASSWORD=zuidakker

# WordPress Debug (set to 'true' for development)
WORDPRESS_DEBUG=false

# Site Configuration
SITE_URL=http://localhost:8080
SITE_NAME=Zuidakker

# Port Configuration
WORDPRESS_PORT=8080
PHPMYADMIN_PORT=8081

# Admin User (for automated setup)
ADMIN_USER=admin
ADMIN_PASSWORD=change-this-password
ADMIN_EMAIL=admin@zuidakker.nl

# Timezone
TZ=Europe/Amsterdam

# PHP Configuration
PHP_MEMORY_LIMIT=256M
PHP_MAX_EXECUTION_TIME=300
PHP_UPLOAD_MAX_FILESIZE=64M
PHP_POST_MAX_SIZE=64M
